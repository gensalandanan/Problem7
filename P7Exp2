#include <iostream>
using namespace std;

int main()
{
    int num;
    int sum;
    int i;
    
    cout <<"Enter a number: ";
    cin >> num;
   
   	while (num > 0) 
   	{
   		sum = 0;
    		for(i=1; i<=num; i++) {
				sum=sum+i;}
    cout << "The sum of all whole numbers from 1 to " << num << " is " << sum << endl;
    
	cout<<"Enter a number: ";
	cin>> num; 
	}
	cout<< "Thank you!";
    return 0;
    
}
